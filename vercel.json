{
  "version": 2,
  "name": "farmfresh",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "nodeVersion": "20.x"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "installCommand": "npm ci --legacy-peer-deps --omit=optional",
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}